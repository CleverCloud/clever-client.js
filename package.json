{
  "name": "@clevercloud/client",
  "version": "10.1.0",
  "description": "JavaScript REST client and utils for Clever Cloud's API",
  "homepage": "https://github.com/CleverCloud/clever-client.js",
  "license": "Apache-2.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/CleverCloud/clever-client.js"
  },
  "keywords": [
    "clever-cloud",
    "api",
    "rest",
    "client"
  ],
  "files": [
    "/esm/"
  ],
  "engines": {
    "node": "22"
  },
  "scripts": {
    "clean-cache": "node tasks/clean-cache.js",
    "demo": "node tasks/demo.js",
    "endpoints-analyze": "node tasks/endpoints-analyze.js",
    "endpoints-generate": "node tasks/endpoints-generate.js",
    "endpoints-list": "node tasks/endpoints-list.js",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "generate-client": "npm run clean-cache && npm run generate-client-from-openapi",
    "generate-client-from-openapi": "node tasks/generate-client.js",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prepack:dev": "npm run generate-client",
    "prepack:prod": "npm run format:check && npm run lint && npm run typecheck && npm run test-wtr && npm run generate-client",
    "prepack": "[ \"$DEV\" == \"true\" ] && npm run prepack:dev || npm run prepack:prod",
    "test-wtr": "web-test-runner",
    "test-wtr:watch": "web-test-runner --watch",
    "test-mocha": "mocha -t 60000 test/node/**/*.spec.js",
    "typecheck": "tsc -p tsconfig.json"
  },
  "dependencies": {
    "component-emitter": "^1.3.0",
    "oauth-1.0a": "^2.2.6"
  },
  "peerDependencies": {
    "eventsource": "^1.0.7",
    "ws": "^7.4.3"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.8",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@inquirer/prompts": "^7.5.0",
    "@scalar/types": "^0.1.11",
    "@scalar/openapi-parser": "^0.10.16",
    "@scalar/openapi-types": "^0.2.1",
    "@types/component-emitter": "^1.2.14",
    "@types/eventsource": "^1.1.15",
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.10",
    "@web/test-runner": "^0.18.1",
    "@web/test-runner-mocha": "^0.9.0",
    "babel-plugin-dynamic-import-node": "^2.3.3",
    "chai": "^5.2.0",
    "change-case": "^5.4.4",
    "del": "^8.0.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.17.0",
    "find-free-ports": "^3.1.1",
    "fs-extra": "^11.3.0",
    "globals": "^16.0.0",
    "hanbi": "^1.0.3",
    "lodash": "^4.17.21",
    "mocha": "^10.2.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "safe-stringify": "^1.1.1",
    "superagent": "^6.1.0",
    "typescript": "^5.8.3"
  },
  "volta": {
    "node": "22.7.0"
  }
}
